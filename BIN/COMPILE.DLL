    }

    //asm: Inline-Assembler ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¯
    if(q[j] Integer==0x7361)&&(q[j+2] Char==0x6d)
    {
