    if(q[j]==0x65747865)&&(q[j+4]Integer==0x6e72) j=j+6 Put('extern ',0)



    //link <DLL>: ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¯
    if(q[j]==0x6b6e696c)
    {
